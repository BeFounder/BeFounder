<view class="messageBox">
  <!--头像和名字部分-->
  <view class="messageItems">

    <view class="userImage">
      <image class="userinfo-avatar"
          src="{{item.UserPhoto}}">
        </image>
    </view>

    <view class="messageItems">
      {{item.Nickname}}
    </view>

    <view class="Tel" bindtap="getTel">
      联系楼主
    </view>
  </view>

  <!--帖子内容-->
  <view class="messageItems">
    <view class="postContext" style='color:blue;'>
        {{item.PostTitle}}
    </view>
  </view>
  
  <view class="messageItems">
    <view class="postContext">
        {{item.Description}}
    </view>
  </view>

  <view class="section">
  <image style="width:{{imageWidth}}px;height:{{imageHeight}}px;"
         wx:if="{{item.Photo1}}"
         src="{{item.Photo1}}"
         mode="scaleToFill"
         data-nowurl="{{item.Photo1}}" data-nowid="{{y}}"
         catchtap='previewImage'>
  </image>
  <image style="width:{{imageWidth}}px;height:{{imageHeight}}px;"
         wx:if="{{item.Photo2}}"
         src="{{item.Photo2}}"
         mode="scaleToFill"
         data-nowurl="{{item.Photo2}}" data-nowid="{{y}}"
         catchtap='previewImage'>
  </image>
  <image style="width:{{imageWidth}}px;height:{{imageHeight}}px;"
         wx:if="{{item.Photo3}}"
         src="{{item.Photo3}}"
         mode="scaleToFill"
         data-nowurl="{{item.Photo3}}" data-nowid="{{y}}"
         catchtap='previewImage'>
  </image>
  </view>

  <!--地址-->
  <view class="messageItems" wx:if="{{item.Address}}">
    <image class="address" src="../pic/address.png">
    </image>
    <view class="mapContext">
        {{item.Address}}
    </view>
  </view>

  <view class="messageItems">
    <view class="comments">
    </view>
  </view>


</view>


<view class="Comments">
</view>

<view class="tabCom">

    <view class="comment">
        <input bindinput='CommentInput' class="weui-input" name='title' placeholder="在此评论"/>
    </view>
    <button class="cbutton" bindtap='CommentAdd'>评论</button>
</view>