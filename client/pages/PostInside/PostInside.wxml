<view class="messageBox">
  <!--头像和名字部分-->
  <view class="messageItems">

    <view class="userImage">
      <image class="userinfo-avatar"
          src="{{item.UserPhoto}}">
        </image>
    </view>

    <view class="headBox">
      <view class="messageItems"  style='font-size:35rpx'>
        {{item.Nickname}}
      </view>
      <view class="messageItems" style='font-size:20rpx'>
        {{item.PostTime}}
      </view>
    </view>

    <view class="Tel" bindtap="getTel" data-ii="{{item.OpenID}}">
      联系楼主
    </view>
  </view>

  <!--帖子标题-->
  <view class="messageItems">
    <view class="postContext" style='color:blue;'>
        {{item.PostTitle}}
    </view>
  </view>
  
  <!--帖子正文-->
  <view class="messageItems">
    <text class="postContext" decode='{{true}}' style="margin-top:0px">
        {{item.Description}}
    </text>
  </view>

  <view class="messageItems">
    <view class="ImageBox">
    <image class="postImage"
          wx:if="{{item.Photo1}}"
          src="{{item.Photo1}}"
          mode="scaleToFill"
          data-nowurl="{{item.Photo1}}" data-nowid="{{y}}"
          catchtap='previewImage'>
    </image>
    <image class="postImage"
          wx:if="{{item.Photo2}}"
          src="{{item.Photo2}}"
          mode="scaleToFill"
          data-nowurl="{{item.Photo2}}" data-nowid="{{y}}"
          catchtap='previewImage'>
    </image>
    <image class="postImage"
          wx:if="{{item.Photo3}}"
          src="{{item.Photo3}}"
          mode="scaleToFill"
          data-nowurl="{{item.Photo3}}" data-nowid="{{y}}"
          catchtap='previewImage'>
    </image>
    </view>
  </view>

  <!--地址-->
  <view class="messageItems" wx:if="{{item.Address}}">
    <image class="address" src="../pic/address.png">
    </image>
    <view class="mapContext">
        {{item.Address}}
    </view>
  </view>


</view>

<view class="Comments" wx:for="{{commentsArray}}" wx:key="comments" style="background-color:white;">

  <view style="height:5px;background-color:#F6F6F6">
  </view>
  <view class="messageItems">

    <view class="userImage">
      <image class="userinfo-avatar"
          src="{{item.UserPhoto}}">
        </image>
    </view>

    <view class="headBox">
      <view class="messageItems"  style='font-size:35rpx'>
        {{item.Nickname}}
      </view>
      <view class="messageItems" style='font-size:20rpx'>
        {{item.CommentTime}}
      </view>
    </view>

    <view class="Tel" bindtap="getTel" data-ii="{{item.OpenID}}">
      联系ta
    </view>
  </view>
  
  <view class="messageItems">
    <text class="postContext">
        {{item.Text}}
    </text>
  </view>

</view>

<view style="height:100px; bottom:0">
  <text>\n\n</text>
</view>

<view class="tabCom">

    <view class="comment">
        <input bindinput='CommentInput' value="{{comment}}" class="weui-input" 
        name='title' placeholder="在此评论"/>
    </view>
    <button class="cbutton" bindtap='CommentAdd'>评论</button>
</view>

<modal hidden="{{telHidden}}" title="联系方式" confirm-text="返回" bindconfirm="cancel" no-cancel="true">  
    {{(tel == "" || tel == null) ? "用户没有填写联系方式" : tel }}
</modal> 