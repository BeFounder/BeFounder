<!--一个回复框-->
<view class="messageBox">
  <!--头像和名字部分-->
  <view class="messageItems">

    <view class="userImage">
      <image class="userinfo-avatar"
          src="{{item.UserPhoto}}">
        </image>
    </view>

    <view class="messageItems">
      {{item.Nickname}}回复你
    </view>

  </view>

  <!--回复内容-->
  <view class="messageItems">
    <view class="replyContext">
        {{item.Text}}回复内容测试...
    </view>
  </view>
  
  <!--帖子内容-->
  <view class="messageItems" style='color:blue'>
    <view class="postContext">
      在你的帖子:{{item.PostTitle}}
    </view>
  </view>

</view>