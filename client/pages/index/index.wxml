<!--导航条-->
<view class="navbar">
  <text wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">{{item}}</text>
</view>

<!--首页-->
<!--一个帖子框-->
<view class="messageBox" wx:for="{{titleArray}}" wx:key="title" wx:for-index="y" bindtap='visTitle'>
  <!--头像和名字部分-->
  <view class="messageItems">

    <view class="userImage">
      <image class="userinfo-avatar"
          src="{{item.UserPhoto}}">
        </image>
    </view>

    <view class="messageItems">
      {{item.Nickname}}
    </view>

    <view class="Tel" bindtap="getTel">
      联系楼主
    </view>
  </view>

  <!--帖子内容-->
  <view class="messageItems">
    <view class="postContext" style='color:blue;'>
        {{item.PostTitle}}
    </view>
  </view>
  
  <view class="messageItems">
    <view class="postContext">
        {{item.Description}}
    </view>
  </view>

  <view class="section">
  <image style="width:{{imageWidth}}px;height:{{imageHeight}}px;"
         src="{{item.Photo1}}"
         mode="scaleToFill"
         data-nowurl="{{item.Photo1}}" data-nowid="{{y}}"
         bindtap='previewImage'>
  </image>
  <image style="width:{{imageWidth}}px;height:{{imageHeight}}px;"
         src="{{item.Photo2}}"
         mode="scaleToFill"
         data-nowurl="{{item.Photo2}}" data-nowid="{{y}}"
         bindtap='previewImage'>
  </image>
  <image style="width:{{imageWidth}}px;height:{{imageHeight}}px;"
         src="{{item.Photo3}}"
         mode="scaleToFill"
         data-nowurl="{{item.Photo3}}" data-nowid="{{y}}"
         bindtap='previewImage'>
  </image>
  </view>

  <!--地址-->
  <view class="messageItems">
    <image class="address" src="../pic/address.png">
    </image>
    <view class="mapContext">
        {{item.Address}}
    </view>
  </view>

  <view class="messageItems">
    <view class="comments">
    </view>
  </view>


</view>


