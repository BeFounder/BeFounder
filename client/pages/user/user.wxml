<!--头像-->
<view class="info-items">
     <view class="infotext">
        <image class="userinfo-avatar"
          src="{{userInfo.UserPhoto}}">
        </image>
        
        <text style="color:blue;">{{userInfo.Nickname}}</text>
     </view>
</view>


<!--联系电话-->
<view class="info-items" bindtap='setTel'>
     <text>联系方式</text>
     <view class="infotext">
        <text style='color:blue'>{{(userInfo.Connection == "" || userInfo.Connection == null) ? "请先绑定联系方式" : userInfo.Connection}}</text>
     </view>
</view>

<modal hidden="{{hiddenmodalput}}" title="请输入新的联系方式" confirm-text="确定" cancel-text="返回" bindcancel="cancel" bindconfirm="confirm">  
    <input type='text' placeholder="请输入内容" bindinput='ConnectionInput'/>  
</modal> 

<!--消息-->
<view class="info-message" bindtap='toMessage'>
     <text>消息</text>
     <view class="infotext">
        <text>{{nickname}}</text>
     </view>
</view>
<view class="info-message" bindtap='toMessage'>
     <text>我的帖子</text>
     <view class="infotext">
        <text>{{nickname}}</text>
     </view>
</view>